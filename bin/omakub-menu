  case $(menu "Keybindings" "ï„œ   Add\nï„œ   Remove" "--width 250 --height 130") in
  *Add*) present_terminal omakub-keybinding-add ;;
  *Remove*) present_terminal omakub-keybinding-remove ;;
  *) show_setup_menu ;;
  esac
}

