show_remove_menu() {
  case $(menu "Remove" "ï‰¨  Web App\nï’‰  TUI\nó°€»  App\nó°¸Œ  Theme\nó°µ®  Development\nó°“  Preinstalls" "--width 250 --height 280") in
  *Web*) present_terminal omakub-webapp-remove ;;
  *TUI*) present_terminal omakub-tui-remove ;;
  *App*) present_terminal omakub-app-remove ;;
  *Theme*) present_terminal omakub-theme-remove ;;
  *Development*) show_remove_development_menu ;;
  *Preinstalls*) present_terminal omakub-remove-all ;;
  *) show_main_menu ;;
  esac
}

show_remove_development_menu() {
  case $(menu "Remove Development Environment" "ó°«  Ruby on Rails\nî  JavaScript\nî˜§  Go\nîœ½  PHP\nîœ¼  Python\nî˜­  Elixir\nî£¯  Zig\nî¨  Rust\nîœ¸  Java\nî¿  .NET\nî¡  OCaml\nî¨  Clojure" "--width 250 --height 510") in
